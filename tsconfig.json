{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "incremental": true,
    "strict": true,
    "outDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
